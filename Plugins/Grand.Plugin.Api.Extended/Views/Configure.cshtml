@model Grand.Plugin.Api.Extended.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}
@inject Grand.Core.IWebHelper webHelper
<form asp-controller="ApiExtendedAdmin" asp-action="Configure" method="post">

    <div class="form-horizontal">
        <div class="form-body">
            <div class="note note-info">
                <p>
                    Set a full file path to Firebase credential configuration file. <a target="_blank" href="https://firebase.google.com/docs/admin/setup?authuser=0">Learn More</a>
                </p>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="FirebaseAppCredentialConfigurationFile" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="FirebaseAppCredentialConfigurationFile" />
                    <span asp-validation-for="FirebaseAppCredentialConfigurationFile"></span>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-sm-offset-3 col-md-9 col-sm-9">
                    <input type="submit" name="save" class="btn green" value="@T("Admin.Common.Save")" />
                </div>
            </div>
        </div>
    </div>
</form>